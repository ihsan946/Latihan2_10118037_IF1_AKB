
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="190dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen50"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:textColorHint="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_below="@id/logo"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        android:layout_marginBottom="@dimen/dimen10"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:outlineAmbientShadowColor="@color/white"
        android:backgroundTint="@color/white"
        android:layout_below="@id/username"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        android:layout_marginBottom="@dimen/dimen20"
        android:inputType="textPassword"
        />

    <Button
        android:id="@+id/btnLOGIN"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="@drawable/background_color"
        android:textColor="@color/white"
        android:text="LOGIN"
        android:layout_below="@id/password"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        />

    <TextView
        android:id="@+id/nameOr"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimen80"
        android:text="OR"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginBottom="@dimen/dimen20"
        android:layout_below="@id/btnLOGIN"
        />

    <Button
        android:id="@+id/btn_Connect"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_below="@id/nameOr"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginTop="-37dp"
        android:layout_marginRight="@dimen/dimen30"
        android:background="@drawable/background_color"
        android:drawableStart="@mipmap/ic_facebook"
        android:paddingLeft="@dimen/dimen50"
        android:paddingRight="@dimen/dimen50"
        android:text="CONNECT WITH FACEBOOK"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/teks1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doesn't have account? "
        android:layout_marginLeft="110dp"
        android:layout_below="@id/btn_Connect"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dimen20"

        />
    <TextView
        android:id="@+id/teks2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@id/btn_Connect"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/teks1"
        android:layout_marginTop="@dimen/dimen20"
        />



</RelativeLayout>