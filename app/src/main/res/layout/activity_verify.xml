<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBlue"
    android:orientation="vertical"
    tools:context=".VerifyActivity">

    <TextView
        android:id="@+id/teks1_Verify"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen200"
        android:fontFamily="@font/montserrat_light"
        android:text="Verify your Account"
        android:textColor="@color/white"
        android:textSize="38sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/teks2_Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We have send verification code to your email"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dimen50"
        android:paddingRight="@dimen/dimen30"
        android:layout_below="@id/teks1_Verify"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_light"
        android:textSize="14sp"
        />

    <EditText
        android:id="@+id/codeVerify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teks2_Verify"
        android:layout_marginRight="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen20"
        android:outlineSpotShadowColor="@color/white"
        android:backgroundTint="@color/white"
        android:hint="enter verification code here...."
        android:fontFamily="@font/montserrat_light"
        android:textColorHint="@color/white"
        android:paddingLeft="90dp"
        android:textSize="14sp"
        android:layout_marginTop="@dimen/dimen50"
        />

    <Button
        android:id="@+id/btn_Verify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/codeVerify"
        android:layout_marginTop="@dimen/dimen20"
        android:layout_marginLeft="@dimen/dimen30"
        android:layout_marginRight="@dimen/dimen30"
        android:background="@drawable/btn_verify"
        android:text="Send"
        android:textColor="@color/white"
        android:onClick="pindahMain"
        />

    <TextView
        android:id="@+id/teks3_Verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doesn't get the code? "
        android:layout_below="@id/btn_Verify"
        android:layout_marginTop="@dimen/dimen30"
        android:textColor="@color/white"
        android:fontFamily="@font/montserrat_light"
        android:layout_marginLeft="100dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_Verify"
        android:layout_marginTop="@dimen/dimen30"
        android:layout_toRightOf="@id/teks3_Verify"
        android:text="Resend"
        android:fontFamily="@font/montserrat_light"
        android:textStyle="bold"
        android:textColor="@color/white"

        />

</RelativeLayout>